{
  "name": "autofocus-exp",
  "version": "0.0.0",
  "description": "cross platform app for todos",
  "main": "src/index.js",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "codecov": "^3.6.5",
    "cross-env": "^6.0.3",
    "husky": "^3.1.0",
    "minimist": "^1.2.5",
    "mocha": "^6.2.2",
    "mocha-steps": "^1.3.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "prettier": "1.19.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "scripts": {
    "test": "mocha e2e && mocha test",
    "unit": "mocha test",
    "e2e": "mocha e2e",
    "coverage": "nyc npm run test",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "tslint -c tslint.json 'src/*.ts'",
    "build": "npx tsc",
    "run": "node src/index.js",
    "build-and-run": "npm run-script build && npm run-script run",
    "build-and-unit": "npm run-script build && npm run-script unit",
    "build-and-e2e": "npm run-script build && npm run-script e2e",
    "build-lint-and-test": "npm run-script build && npm run-script lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avidrucker/autofocus-exp.git"
  },
  "keywords": [
    "todo-app"
  ],
  "author": "Avi Drucker",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/avidrucker/autofocus-exp/issues"
  },
  "homepage": "https://github.com/avidrucker/autofocus-exp#readme",
  "dependencies": {
    "@types/readline-sync": "^1.4.3",
    "readline-sync": "^1.4.10",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-push": "CI=true npm run-script build-lint-and-test"
    }
  }
}
