{
  "name": "autofocus-exp",
  "version": "0.0.0",
  "description": "cross platform app for todos",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "cross-env": "^6.0.3",
    "husky": "^3.1.0",
    "mocha": "^6.2.2",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "prettier": "1.19.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "scripts": {
		"test": "mocha",
		"coverage": "nyc npm run test",
    "build": "npx tsc && tslint -c tslint.json 'src/*.ts'",
    "run": "node src/index.js",
    "build-and-run": "npm run-script build && npm run-script run",
    "build-and-test": "npm run-script build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avidrucker/autofocus-exp.git"
  },
  "keywords": [
    "todo-app"
  ],
  "author": "Avi Drucker",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/avidrucker/autofocus-exp/issues"
  },
  "homepage": "https://github.com/avidrucker/autofocus-exp#readme",
  "dependencies": {
    "@types/readline-sync": "^1.4.3",
    "readline-sync": "^1.4.10",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-push": "CI=true npm run-script build-and-test"
    }
  }
}
